<Window x:Class="TaskManager.UI.Views.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       Title="Task Manager" Height="450" Width="700"
       WindowStartupLocation="CenterScreen"
       xmlns:md="https://github.com/fantasticfiasco/mvvm-dialogs"
       md:DialogServiceViews.IsRegistered="True">
   <DockPanel>
       <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="10">
           <TextBlock VerticalAlignment="Center" Text="Filter:" Margin="0,0,5,0"/>
           <ComboBox ItemsSource="{Binding StatusFilters}" SelectedItem="{Binding SelectedFilter}" Width="120" Margin="0,0,10,0"/>
           <Button Content="Add" Command="{Binding AddCommand}" Width="75" Margin="0,0,5,0"/>
           <Button Content="Edit" Command="{Binding EditCommand}" Width="75" Margin="0,0,5,0"/>
           <Button Content="Delete" Command="{Binding DeleteCommand}" Width="75" Margin="0,0,5,0"/>
           <Button Content="Export to PDF" Command="{Binding ExportCommand}" Width="110"/>
       </StackPanel>
       <DataGrid ItemsSource="{Binding FilteredTasks}" SelectedItem="{Binding SelectedTask}" AutoGenerateColumns="False"
                 Margin="10" CanUserAddRows="False" IsReadOnly="True">
           <DataGrid.Columns>
               <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="200"/>
               <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
               <DataGridCheckBoxColumn Header="Completed" Binding="{Binding IsCompleted}" Width="90"/>
               <DataGridTextColumn Header="Created At" Width="140">
                   <DataGridTextColumn.Binding>
                       <Binding Path="CreatedAt" StringFormat="{}{0:yyyy-MM-dd HH:mm}"/>
                   </DataGridTextColumn.Binding>
               </DataGridTextColumn>
           </DataGrid.Columns>
       </DataGrid>
   </DockPanel>
</Window>